{
  "openapi": "3.0.3",
  "info": {
    "title": "Gener-AI-tions API",
    "description": "API Documentation for the Gener-AI-tions application.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/",
      "description": "Main Server"
    }
  ],
  "paths": {
    "/api/auth/signup": {
      "post": {
        "summary": "Sign Up",
        "requestBody": {
          "description": "New user data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserCreate"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "User created successfully" },
          "400": { "description": "Validation error" }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "Login",
        "requestBody": {
          "description": "User login credentials",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" },
          "401": { "description": "Invalid credentials" }
        }
      }
    },
    "/api/profile": {
      "get": {
        "summary": "Get user profile",
        "responses": {
          "200": { "description": "Profile retrieved successfully" }
        }
      },
      "put": {
        "summary": "Update user profile",
        "requestBody": {
          "description": "Profile data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserProfileUpdate"
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Profile updated successfully" }
        }
      }
    },
    "/api/projects": {
      "get": {
        "summary": "List Projects",
        "responses": {
          "200": {
            "description": "List of projects retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/ProjectOut" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create Project",
        "requestBody": {
          "description": "Project data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProjectCreate"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Project created successfully" }
        }
      }
    },
    "/api/individuals": {
      "get": {
        "summary": "List Individuals",
        "responses": {
          "200": {
            "description": "List of individuals retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/IndividualOut" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create Individual",
        "requestBody": {
          "description": "Individual data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IndividualCreate"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Individual created successfully" }
        }
      }
    },
    "/api/identities": {
      "post": {
        "summary": "Create Identity",
        "requestBody": {
          "description": "Identity data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IdentityCreate"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Identity created successfully" }
        }
      }
    },
    "/api/families": {
      "get": {
        "summary": "List Families",
        "parameters": [
          {
            "name": "project_id",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" },
            "description": "Filter families by project ID"
          }
        ],
        "responses": {
          "200": {
            "description": "List of families retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/FamilyOut" }
                }
              }
            }
          }
        }
      }
    },
    "/api/relationships": {
      "post": {
        "summary": "Create Relationship",
        "requestBody": {
          "description": "Relationship data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RelationshipCreate"
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Relationship created successfully" }
        }
      },
      "delete": {
        "summary": "Delete Relationship",
        "parameters": [
          {
            "name": "relationship_id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" },
            "description": "ID of the relationship to delete"
          }
        ],
        "responses": {
          "200": { "description": "Relationship deleted successfully" },
          "404": { "description": "Relationship not found" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserCreate": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string" },
          "confirm_password": { "type": "string" }
        },
        "required": ["username", "email", "password", "confirm_password"]
      },
      "UserLogin": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string" }
        },
        "required": ["email", "password"]
      },
      "ProjectCreate": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        },
        "required": ["name"]
      },
      "ProjectOut": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" }
        }
      },
      "IndividualCreate": {
        "type": "object",
        "properties": {
          "first_name": { "type": "string" },
          "last_name": { "type": "string" },
          "birth_date": { "type": "string", "format": "date" },
          "gender": { "type": "string" }
        },
        "required": ["first_name", "last_name", "gender"]
      },
      "IndividualOut": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "first_name": { "type": "string" },
          "last_name": { "type": "string" },
          "gender": { "type": "string" }
        }
      },
      "IdentityCreate": {
        "type": "object",
        "properties": {
          "individual_id": { "type": "integer" },
          "first_name": { "type": "string" },
          "last_name": { "type": "string" },
          "gender": { "type": "string" }
        },
        "required": ["individual_id", "first_name", "last_name", "gender"]
      },
      "FamilyOut": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "partner1": { "type": "string" },
          "partner2": { "type": "string" },
          "children_ids": { "type": "array", "items": { "type": "integer" } }
        }
      },
      "RelationshipCreate": {
        "type": "object",
        "properties": {
          "individual_id": { "type": "integer" },
          "related_id": { "type": "integer" },
          "relationship_type": { "type": "string" }
        },
        "required": ["individual_id", "related_id", "relationship_type"]
      }
    }
  }
}
